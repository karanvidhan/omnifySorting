<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hire.omnify.com.omnifysorting.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:id="@+id/number_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"/>


        <LinearLayout
            android:id="@+id/buttonPanel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:weightSum="2">

            <Button
                android:id="@+id/Regerate_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/blue_button_border"
                android:layout_margin="4dp"
                android:elevation="4dp"
                android:text="Regenerate"/>

            <Button
                android:id="@+id/sorted_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:elevation="4dp"
                android:layout_margin="4dp"
                android:background="@drawable/blue_button_border"
                android:text="sort"/>


        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
